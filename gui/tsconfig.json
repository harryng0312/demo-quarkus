{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "target": "es5",
    "strict": true,
    "module": "es2022",
    "moduleResolution": "node",

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "npm:": "node_modules"
    }
  },

  "references": [
    {
      "path": "./tsconfig.vite-config.json"
    }
  ]
}
